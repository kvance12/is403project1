@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title</h2>
@model MVCEmail.Models.EmailFormModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Send your comments.</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromSubject, new { @class = "col-md-2 conrol-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.FromSubject, new List<SelectListItem> {
                       new SelectListItem { Value = "0" , Text = "Question" },
                       new SelectListItem { Value = "1" , Text = "New Info Request" },
                       new SelectListItem { Value = "2" , Text = "Other" }}, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromSubject)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Submit" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
