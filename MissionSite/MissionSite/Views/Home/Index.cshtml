@* html for the index.   *@
@{
    ViewBag.Title = "Home Page";
    <link href="~/Content/Styles.css" rel="stylesheet" />
}

@* jumbotron *@
<div class="jumbotron" id="JumboPic">
    <h1 class="black" id="headtext">Questions about LDS Missions?</h1>
    <p class="lead black" id="labeltext">Find out about specific LDS missions now!</p>
    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <p>
                <a href="@Url.Action("Mission", "Mission")" class="btn btn-primary">
                    Find a Mission
                </a>
            </p>
        </div>
    </div>
    
</div>




<div class="row">
    <div class="col-md-6">
        <img src="~/Content/Pictures/quote.jpg" width="462" height="700" />
    </div>
    <div class="col-md-6">
        <p>
            <font size="8">
                LDS Mission Stats:
                <ul>
                    <li>74,079 missionaries in the field</li>
                    <li>418 missions</li>
                    <li>15 Missionary Training Centers</li>
                </ul>
            </font>
        </p>
    </div>
</div>
<div class="jumbotron" id="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center">
                <iframe width="640" height="360" src="https://www.youtube.com/embed/tAheGUPJI8Y"
                        frameborder="0" allowfullscreen></iframe>
                <p>
                    <div class="btn-group">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                LDS Websites <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="https://www.mormon.org/">Mormon.org</a></li>
                                <li><a href="https://www.lds.org/?lang=eng">Lds.org</a></li>
                                <li><a href="https://www.mormonchannel.org/">Mormonchannel.org</a></li>
                            </ul>

                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <h2 class="text-center">Sister Missionaries</h2>
        <p>
            <img class="homepic" src="~/Content/Pictures/sisters.jpeg" />
        </p>
        <p class="text-center"><a class="btn btn-default" href="http://lds.org">Learn more &raquo;</a></p>
    </div>

    <div class="col-md-6">
        <h2 class="text-center">Elders</h2>
        <p><img class="homepic" src="~/Content/Pictures/elders.jpeg" /> </p>
        <p class="text-center"><a class="btn btn-default" href="http://lds.org">Learn more &raquo;</a></p>
    </div>
</div>